<!DOCTYPE html>
<html>
  <head>
    <title>StockList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
       <nav class="navbar navbar-expand-md bg-body-secondary" data-bs-theme="dark">
        <div class="container-fluid">
          <%= link_to 'StockList', root_path, class:"navbar-brand" %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <%# ログインしている時の表示 %>
          
            <div class="collapse navbar-collapse" id="navbar">
              <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to '在庫一覧', stocks_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">買い物リスト</a>
                </li>
              </ul>

              <ul class="navbar-nav justify-content-end">
                <li class="nav-item">
                  <a class="nav-link disabled text-white"><%= current_user.name %>さん</a>
                </li>
                <li class="nav-item">
                  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"nav-link" %>
                </li>

                <% else %>
              
              <%# ログインしていない時の表示 %>
                <li class="nav-item">
                  <%= link_to 'ログイン', new_user_session_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to '新規登録', new_user_registration_path, class:"nav-link" %>
                </li>
                <% end %>
              </ul>
            </div>
        </div>
      </nav>
    </header>
    
    <%= yield %>
    
  </body>
</html>
