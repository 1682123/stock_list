<nav class="navbar navbar-expand-md bg-body-secondary" data-bs-theme="light">
  <div class="container-fluid">
    <%= link_to '新規登録', new_memo_path, class:"btn btn-primary" %>
  </div>
</nav>

<div class="container">
  <div class="row m-4">
    <div class="col-12 col-md-6 mb-3">
      <h1 class="text-center fw-bold">買い物リスト</h5>
    </div>
    <%# 買い物リスト %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">商品名</th>
          <th scope="col">備考欄</th>
          <th scope="col">登録日</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @user_memos.each do |memo| %>
        <tr>
          <td><%= memo.title %></td>
          <td><%= memo.memo %></td>
          <td><%= memo.created_at.strftime('%Y年%m月%d日') %></td>
          <td>
            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
              <%= link_to '編集', edit_memo_path(memo.id), class:"btn btn-outline-secondary"%>
              <%= link_to '削除', memo_path(memo.id), method: :delete, class:"btn btn-outline-secondary"%>
              <!-- <button type="button" class="btn btn-outline-secondary">編集</button>
              <button type="button" class="btn btn-outline-secondary">削除</button> -->
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>