<div class="m-5 mx-auto" style="width: 200px;">
  <h2 class="mb-3">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "ユーザー名" %><br />
      <%= f.text_field :name, id:"name", class:"mb-2" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-2" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"mb-2" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"mb-2" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録",class:"mt-2 btn btn-primary" %>
    </div>
  <% end %>


</div>
